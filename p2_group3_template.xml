<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="./schema_1111.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<DOC>

    <!-- begin genre -->
    <op_ed>
        <!-- YOUR ROOT ELEMENT GOES HERE (NAME OF YOUR GENRE), FOR EXAMPLE, "essay" or "obit" -->

        <docHead>
            <!-- make changes to the document header as necessary (based on your genre) -->
            <title/>
            <author xml:id="id"/>
            <date/>
        </docHead>
        
        <intro>
            <opinion type="main"></opinion>
        </intro>
        
        <body_para>
            <opinion type="opposing"></opinion>
            <!--<counter_opposing></counter_opposing> delete becasue of documentation changes-->
            <picture url="#url_here"></picture>
            <evidence type="other"></evidence>
            <bg_info></bg_info>
            <!--<statistics></statistics>-->
            <quote></quote>
            <!--<per_experience></per_experience>-->
            <example></example>
            <situation></situation>
        </body_para>
        
        <conclusion></conclusion>
        <source></source>

        <!-- THE REST OF YOUR DOCUMENT STRUCTURE HERE; WHAT FOLLOWS THE HEADER IN YOUR GENRE? for example, body, or text, or whatever -->

    </op_ed>
    <!-- end genre -->



    <!-- leave this section for peer review and assessment -->
    <docReview>
        <reviewer type="peer" xml:id="id_here"> Name of Reviewer</reviewer>
        <report type="peer" who="#id_here">
            <p>Peer review report will go here.</p>
        </report>
        <reviewer type="instructor" xml:id="smi.ke">Kevin Smith</reviewer>
        <report type="instructor" who="#smi.ke">
            <p>Instructor comments will go here.</p>
        </report>
    </docReview>
</DOC>
